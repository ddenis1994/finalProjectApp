<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Settings.Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <!-- We make the parent view clickable instead for better touch feedback -->
        <item name="background">@null</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Settings.Label" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
    </style>

    <style name="Settings.Container" parent="">
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
        <item name="android:orientation">horizontal</item>
        <item name="paddingEnd">?attr/listPreferredItemPaddingEnd</item>
        <item name="paddingStart">?attr/listPreferredItemPaddingStart</item>
    </style>

    <style name="Settings.Header" parent="@style/TextAppearance.AppCompat.Large">
        <item name="paddingStart">?attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>

    </style>

    <!-- credentials fragment -->

    <style name="Credentials.font" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="fontFamily">@font/rajdhani_medium</item>
    </style>

    <style name="Credentials.button" parent="@style/Credentials.font">
        <item name="background">@drawable/credentials_button</item>
        <item name="android:layout_width">@dimen/credential_inner_button_layout_width</item>
        <item name="android:layout_height">@dimen/credential_inner_button_layout_height</item>
        <item name="android:textSize">@dimen/credential_inner_button_text_size</item>
    </style>

    <style name="Credentials.text" parent="@style/Credentials.font">

        <item name="fontFamily">@font/rajdhani_medium</item>
        <item name="paddingStart">@dimen/spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/credential_inner_text_layout_width</item>
        <item name="android:layout_height">@dimen/credential_inner_text_layout_height</item>
    </style>


    <style name="Credentials.Header" parent="@style/Credentials.font">
        style="?attr/textAppearanceHeadline6"
        <item name="paddingStart">@dimen/spacing_large</item>
        <item name="android:textSize">@dimen/credential_dataSet_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Credentials.Icon.big" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:textSize">@dimen/credential_dataSet_text_size</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="Credentials.Icon.small" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:textSize">@dimen/credential_dataSet_text_size</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <style name="Credentials.Container" parent="">
        <item name="android:layout_marginStart">@dimen/credential_inner_layout_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="background">@drawable/card_list_cre_shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="paddingStart">@dimen/spacing_normal</item>
    </style>


</resources>

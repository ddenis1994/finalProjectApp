<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dataSetCard"
            type="com.example.finalprojectapp.data.model.adpters.LayoutDataSetView" />
        <variable
            name="displayDataSet"
            type="android.view.View.OnClickListener"/>
        <variable
            name="deleteDataSet"
            type="android.view.View.OnClickListener"/>

    </data>



    <LinearLayout
        android:id="@+id/passwordMenu"
        style="@style/Credentials.Container"
        android:onClick="@{displayDataSet}"
        >
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/Settings.Container"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/data_set_name"
            style="@style/Credentials.Header"
            android:text="@{dataSetCard.dataSetName}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Credentials.button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/delete_data_set"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:onClick="@{deleteDataSet}"
                     />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/credentials_recycler_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_set_name" />
        </LinearLayout>




</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dataSetCard"
            type="com.example.finalprojectapp.data.model.adpters.LayoutDataSetView" />
        <variable
            name="displayDataSet"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        style="@style/Credentials.dataSet"
        >

    <LinearLayout
        android:id="@+id/passwordMenu"
        style="@style/Credentials.dataSet.layout"
        android:onClick="@{displayDataSet}"
        >
        <TextView
        android:id="@+id/data_set_name"
        style="@style/Credentials.Header"
        android:text="@{dataSetCard.dataSetName}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/credentials_recycler_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_set_name" />
        </LinearLayout>
    </LinearLayout>



</layout>
